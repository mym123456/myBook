/* component/loadingBottom/loadingBottom.wxss */
.load-more{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #555;
}
.load-more image{
  width: 60rpx;
  height: 60rpx;
}
.load-more text{
  line-height: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
}
.no-more{
  position: relative;
  line-height: 60rpx;
  height: 60rpx;
  text-align: center;
  background: #f1f1f1;
  font-size: 14px;
  color: #9e9e9e;
}
.no-more text{
  position: relative;
  z-index:998;
  padding:0 20rpx;
  background: #f1f1f1;
}
.no-more .line{
  position: absolute;
  top: 50%;
  left: 50%;
  z-index: 996;
  transform: translate(-50%,-50%);
  width: 500rpx;
  height: 1rpx;
  background: #ccc;
}