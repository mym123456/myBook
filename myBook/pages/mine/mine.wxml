<!--pages/mine/mine.wxml-->
<image src='/static/image/Ball.svg' class="loading" wx:if="{{isLoading}}"></image>
<view wx:else>
  <view class='msgShow'>
    <view class='msg'>
      <open-data type="userAvatarUrl" class="userAvatar" mode="cover"></open-data>
      <view class='msg-r'>
        <open-data type="userNickName" class="userName"></open-data>
        <text>这家伙很懒，什么也没留下</text>
      </view>
    </view>
    <view class='collection'>
      <view bindtap='handleColletion'>
        <text>{{collectNum-2}}</text>
        <text>收藏</text>
      </view>
      <view>
        <text>4</text>
        <text>关注</text>
      </view>
    </view>
  </view>
</view>
