.study{
  width: 710rpx;
  margin: 0 20rpx;
}

.studyItem{
  display: flex;
  justify-content: space-between;
  border-bottom: 2px solid #e9e9e9;
}

.img{
  width: 220rpx;
  height: 300rpx;
}

.content{
  width: 480rpx;
  height: 300rpx;
}

.container{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 180rpx;
}

.pt{
  display: flex;
  justify-content: space-between
}

.title{
  font-weight: 700;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.chapter{
  font-size: 14px;
  color: #555;
}

.pt text{
  font-size: 12px;
  color: #666;
  white-space: nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
}

.previous{
  width: 350rpx;
}

.btn{
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}
.btn button{
  height: 80rpx;
  width: 200rpx;
  font-size: 16px;
  line-height: 80rpx;
  text-align: center;
}